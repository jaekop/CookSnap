{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useTemplate": "warn",
        "noNonNullAssertion": "warn"
      },
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    }
  },
  "formatter": {
    "enabled": true
  },
  "files": {
    "experimentalScannerIgnores": [
      ".next"
    ],
    "includes": [
      "app/**/*",
      "components/**/*",
      "lib/**/*",
      "scripts/**/*",
      "docs/**/*",
      "types/**/*",
      "styles/**/*",
      "package.json",
      "tsconfig.json",
      "biome.json"
    ]
  }
}
